{
  "manifest_version": 3,
  "name": "Karpathy Tweet Formatter",
  "version": "1.0.0",
  "description": "Makes @karpathy's long tweets easier to read by adding line breaks after sentences. No data collection, works entirely in your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
